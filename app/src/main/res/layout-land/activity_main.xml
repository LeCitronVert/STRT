<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.youceflcv.strt.MainActivity">

    <ProgressBar
        android:id="@+id/healthbar_2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginLeft="76dp"
        android:max="100"
        android:progress="100"
        android:progressTint="#00FF00"
        app:layout_constraintBottom_toTopOf="@+id/attaquant1"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/healthbar_1"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="76dp"
        android:layout_marginLeft="76dp"
        android:max="100"
        android:progress="100"
        android:progressTint="#00FF00"
        app:layout_constraintBottom_toTopOf="@+id/attaquant2"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/healthbar_5"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:max="100"
        android:progress="100"
        android:progressTint="#00FF00"
        app:layout_constraintBottom_toTopOf="@+id/defenseur1"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="147dp"
        android:layout_marginEnd="149dp"
        android:layout_marginBottom="80dp"
        android:text="ATTAQUE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/skillsbar"
        android:layout_width="573dp"
        android:layout_height="65dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button"
        app:layout_constraintVertical_bias="1.0">

        <ImageButton
            android:id="@+id/actif4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:visibility="gone"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            app:srcCompat="@mipmap/ic_launcher" />

        <ImageButton
            android:id="@+id/actif1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:visibility="gone"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            app:srcCompat="@mipmap/ic_launcher" />

        <ImageButton
            android:id="@+id/actif2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:visibility="gone"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            app:srcCompat="@mipmap/ic_launcher" />

        <ImageButton
            android:id="@+id/actif3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:visibility="gone"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            app:srcCompat="@mipmap/ic_launcher" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/attaquant1"
        android:layout_width="86dp"
        android:layout_height="98dp"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="32dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:onClick="setattaquant"
        android:scaleType="centerInside"
        android:tag="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/warrior" />

    <ImageButton
        android:id="@+id/attaquant2"
        android:layout_width="44dp"
        android:layout_height="95dp"
        android:layout_marginStart="64dp"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="40dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:background="@null"
        android:onClick="setattaquant"
        android:tag="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/attaquant1"
        app:srcCompat="@drawable/brawler" />

    <ImageButton
        android:id="@+id/defenseur1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="32dp"
        android:background="@null"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/warrior" />

    <ImageButton
        android:id="@+id/defenseur2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/defenseur1"
        app:srcCompat="@drawable/brawler" />

    <ImageView
        android:id="@+id/SelectAttaquant1"
        android:layout_width="34dp"
        android:layout_height="26dp"
        android:layout_marginTop="22dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/attaquant1"
        app:layout_constraintTop_toTopOf="@+id/attaquant1"
        app:srcCompat="@drawable/fleche_bleu" />

    <ImageView
        android:id="@+id/SelectAttaquant2"
        android:layout_width="34dp"
        android:layout_height="26dp"
        android:layout_marginTop="37dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@+id/attaquant2"
        app:layout_constraintTop_toTopOf="@+id/attaquant2"
        app:srcCompat="@drawable/fleche_bleu" />

</android.support.constraint.ConstraintLayout>
